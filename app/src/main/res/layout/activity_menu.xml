<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.webandrioz.scopeafterug.activities.MenuActivity">
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/eligibility"
        android:background="@drawable/round_button"
        android:textColor="@color/colorAccent"
        android:text="Eligibility"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/books"
        android:layout_alignLeft="@+id/books"
        android:layout_alignStart="@+id/books" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/books"
        android:background="@drawable/round_button"
        android:textColor="@color/colorAccent"
        android:text="Books recommended"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/coachings"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="coachings"
        android:background="@drawable/round_button"
        android:textColor="@color/colorAccent"
        android:id="@+id/coachings"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/books"
        android:layout_alignStart="@+id/books" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Previous years paper"
        android:id="@+id/paper"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round_button"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/quiz"
        android:layout_alignLeft="@+id/coachings"
        android:layout_alignStart="@+id/coachings" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="quiz"
        android:id="@+id/quiz"
        android:background="@drawable/round_button"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/paper"
        android:layout_alignStart="@+id/paper" />

</RelativeLayout>
